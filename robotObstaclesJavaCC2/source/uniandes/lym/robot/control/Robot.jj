	String direction():
	{
	 if(dir == "around")
	  {world.turnRight();world.turnRight();salida = "Command: Turnright";}
	  else if(dir == "left")
	  {world.turnRight();world.turnRight();world.turnRight();salida = "Command: Turnright";}
	  else
	  {world.turnRight();salida = "Command: Turnright";}
	}
	{
